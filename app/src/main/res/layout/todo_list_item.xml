<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/todo_list_todoName"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:background="@drawable/round_square_darkgray"
            android:fontFamily="@font/nanum2"
            android:gravity="center_horizontal"
            android:text="인강 복습"
            android:padding="3dp"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/todo_list_dDay"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round_square_light_gray"
            android:fontFamily="@font/nanum2"
            android:gravity="center_horizontal"
            android:text="D-17"
            android:textSize="17sp"
            android:padding="3dp"
            app:layout_constraintLeft_toRightOf="@+id/todo_list_todoName"


        />

        <CheckBox
            android:id="@+id/todo_list_checkbox"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintLeft_toRightOf="@+id/todo_list_dDay"
        />

        <TextView
            android:id="@+id/todo_list_done"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:background="@drawable/round_square_light_gray"
            android:gravity="center_horizontal"
            android:text="Done"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/todo_list_checkbox"
        />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>