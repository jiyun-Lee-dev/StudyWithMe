<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scheduling.AddTodoDialog">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/nanum2"
            android:id="@+id/new_todo_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:text="새 할일 등록"
            android:textSize="25sp"
            android:textStyle="bold"
            />


        <TextView
            android:fontFamily="@font/nanum2"
            android:id="@+id/nameoftodo"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:text="할일명"
            android:textSize="15sp"
            android:textStyle="bold" />


        <EditText
            android:fontFamily="@font/nanum2"
            android:id="@+id/write_name_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="텍스트를 입력해주세요."
            android:inputType="textNoSuggestions"
            android:privateImeOptions="defaultInputmode=korean"
            />

        <TextView
            android:fontFamily="@font/nanum2"
            android:id="@+id/ddayoftodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-DAY"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="bottom"
            />


        <DatePicker
            android:id="@+id/write_dday_todo"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:ems="10"
            android:fontFamily="@font/nanum2" />

    </LinearLayout>

</FrameLayout>