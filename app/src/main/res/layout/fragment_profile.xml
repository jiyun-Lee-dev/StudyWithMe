<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragment.Profile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:id="@+id/account_layout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/account_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_account_circle_gray_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toRightOf="@+id/account_profile"
                        android:baselineAligned="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/nanum2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="목표" />

                            <TextView
                                android:fontFamily="@font/nanum2"
                                android:id="@+id/profile_goal_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/nanum2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="게시물" />

                            <TextView
                                android:fontFamily="@font/nanum2"
                                android:id="@+id/profile_post_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/nanum2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="팔로우" />

                            <TextView
                                android:fontFamily="@font/nanum2"
                                android:id="@+id/profile_follow_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/account_comment_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="8dp"
                    android:baselineAligned="true"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/nanum2"
                        android:id="@+id/profile_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:textStyle="bold" />

                    <TextView
                        android:fontFamily="@font/nanum2"
                        android:id="@+id/profile_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="commenet" />

                </LinearLayout>

                <Button
                    android:fontFamily="@font/nanum2"
                    android:id="@+id/profile_add_or_edit_btn"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/follow_btn_shape"
                    android:textColor="#FFFFFF"
                    android:text="팔로우" />

            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/nanum2"
                        android:id="@+id/profile_goal_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="우디부디1의 목표 목록"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:fontFamily="@font/nanum2"
                        android:id="@+id/home_add_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:text="목표 추가"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:background="@drawable/whbutton"
                        android:textColor="#ffffff"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:fontFamily="@font/nanum2"
                        android:id="@+id/home_goal_list1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_square_darkgray"
                        android:gravity="center"
                        android:text="컴활1급 | D-97"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:fontFamily="@font/nanum2"
                        android:id="@+id/home_goal_list2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_square_darkgray"
                        android:gravity="center"
                        android:text="토익 900 | D-40"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:fontFamily="@font/nanum2"
                        android:id="@+id/home_goal_list3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_square_darkgray"
                        android:gravity="center"
                        android:text="자바 뽀개기 | D-70"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</FrameLayout>