<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Profile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/account_profile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_account_circle_gray_24dp" />

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="UserName"
                        android:textSize="30dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <GridLayout
                    android:paddingLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:rowCount="2">

                    <TextView
                        android:id="@+id/profile_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="컴공 취준생\n취뽀 아자아자" />
                </GridLayout>



            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="우디부디1의 목표 목록"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/home_add_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:text="목표 추가"
                        android:textStyle="bold"
                        android:background="@drawable/ggboard_btn_shape"
                        android:textColor="#ffffff"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/home_goal_list1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_square_darkgray"
                        android:gravity="center"
                        android:text="컴활1급 | D-97"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/home_goal_list2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_square_darkgray"
                        android:gravity="center"
                        android:text="토익 900 | D-40"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/home_goal_list3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_square_darkgray"
                        android:gravity="center"
                        android:text="자바 뽀개기 | D-70"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</FrameLayout>