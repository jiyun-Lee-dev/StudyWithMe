<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="#ffffff"
    android:gravity="center">

    <TextView
        android:fontFamily="@font/nanum2"
        android:id="@+id/popupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft = "16dp"
        android:layout_marginTop="24dp"
        android:text="새 카테고리 생성"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/bookmark_categoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="카테고리 이름을 입력해주세요"
        android:inputType="textPersonName"
        android:privateImeOptions="defaultInputted=korean"/>

    <Spinner
        android:id="@+id/bookmark_bookmarkGoalList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:entries="@array/bookmarkGoal" />

    <LinearLayout
        android:id="@+id/category_dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:weightSum="10">

        <Button
            android:fontFamily="@font/nanum2"
            android:id="@+id/category_dialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="3.5"
            android:text="확인" />

        <Button
            android:fontFamily="@font/nanum2"
            android:id="@+id/category_dialog_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="취소" />
    </LinearLayout>
</LinearLayout>
