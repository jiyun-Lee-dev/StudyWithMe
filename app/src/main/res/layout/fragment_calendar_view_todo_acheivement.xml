<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scheduling.View_Todo_Acheivement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Goal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="100dp"
            android:text="토익 900"
            android:textSize="24sp"
            android:textStyle="bold" />
    <!--        //변수 이름 Goal_name-->

        <TextView
            android:id="@+id/D_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="70dp"
            android:text="D-44"
            android:textSize="22sp"
            android:textStyle="bold"
        />
        <!--       //첫줄 TEXT들 끝-->

        </LinearLayout>


<!--        밑줄 코드-->
        <View
            android:id="@+id/line2"
            android:layout_width="320dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="#000000"

         />
    <!--     //선그리는 코드-->

    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    벌써 이만큼 달성했어요!-->
        <TextView
            android:id="@+id/what_a_achieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="50dp"
            android:text="벌써 이만큼 달성했어요!"
            android:textColor="#83CAC8"
            android:textSize="18sp"
            android:textStyle="bold"
         />

    </LinearLayout>

    <!--할일별/오늘/이번달 메뉴 버튼   -->

    <LinearLayout
        android:layout_weight="0.08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

    <Button
        android:id="@+id/button_view_todo_acheivement"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:background="#00ff0000"
        android:text="할일별"
        android:textSize="20sp"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/button_view_today_acheivement1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#00ff0000"
        android:text="오늘"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/button_view_month_acheivement1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="0dp"
        android:background="#00ff0000"
        android:text="이번달"
        android:textSize="20sp"
         />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#83cac5"
            android:orientation="vertical">

<!--            //할일1 그래프 구역-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/to_do"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_square_darkgray"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="50dp"
                    android:text="할일 1"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    />


                <TextView
                    android:id="@+id/to_do_dday1"
                    android:layout_width="115dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_square_light_gray"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:text="D_day1"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8">


            </LinearLayout>


<!--            할일2 그래프 구역-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/To_do2"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_square_darkgray"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="50dp"
                    android:text="할일 2"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    />

                <TextView
                    android:id="@+id/to_do_dday2"
                    android:layout_width="115dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_square_light_gray"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:text="D_day2"
                    android:textSize="22sp"
                     />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>



