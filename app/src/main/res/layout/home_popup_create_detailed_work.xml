<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="#ffffff"
    android:gravity="center">

    <TextView
        android:fontFamily="@font/nanum2"
        android:id="@+id/add_detailed_work_popupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft = "16dp"
        android:layout_marginTop="24dp"
        android:text="하루 세부 일정 추가"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:fontFamily="@font/nanum2"
        android:id="@+id/detailed_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="세부 일정을 입력해주세요"
        android:privateImeOptions="defaultInputted=korean"/>

    <LinearLayout
        android:id="@+id/detailed_work_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <TextView
            android:fontFamily="@font/nanum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text = "등록할 날짜 : "/>
        <EditText
            android:fontFamily="@font/nanum2"
            android:id="@+id/detailed_work_date_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"/>
        <EditText
            android:fontFamily="@font/nanum2"
            android:id="@+id/detailed_work_date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"/>
        <EditText
            android:fontFamily="@font/nanum2"
            android:id="@+id/detailed_work_date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/detailed_work_dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:weightSum="10">

        <Button
            android:fontFamily="@font/nanum2"
            android:id="@+id/detailed_work_dialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="3.5"
            android:text="확인" />

        <Button
            android:fontFamily="@font/nanum2"
            android:id="@+id/detailed_work_dialog_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="취소" />
    </LinearLayout>
</LinearLayout>
